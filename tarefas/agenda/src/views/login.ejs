<%- include('includes/head')%>
<%- include('includes/nav')%>
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8 my-3">
                <h1 class="text-center">Login / Criar Conta</h1>
                <%- include('includes/error') %>
                <div class="row d-flex justify-content-around">
                    <div class="col-lg-5 my-3">
                        <h4>Crie uma Conta</h4>
                        <p>Preencha o formulário para criar uma conta.</p>
                        <form action="/login/register" method="POST">
                            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                            <div class="form-group">
                              <label>Email</label>
                              <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" placeholder="Digite Seu Email">
                            </div>
                            <div class="form-group my-1">
                                <label>Senha</label>
                                <input type="password" class="form-control" id="exampleInputPassword1" name="password" aria-describedby="passwordHelp" placeholder="Digite Sua Senha">
                              </div>
                            <button type="submit" class="btn btn-primary my-1">Cadastrar</button>
                        </form>
                    </div>
                    <div class="col-lg-5 my-3">
                        <h4>Faça Login</h4>
                        <p>Acesse Sua Conta Fazendo Login.</p>
                        <form action="/login/login" method="POST">
                            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                            <div class="form-group">
                              <label>Email</label>
                              <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" placeholder="Digite Seu Email">
                            </div>
                            <div class="form-group my-1">
                                <label>Senha</label>
                                <input type="password" class="form-control" id="exampleInputPassword1" name="password" aria-describedby="passwordHelp" placeholder="Digite Sua Senha">
                              </div>
                            <button type="submit" class="btn btn-primary my-1">Entrar</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-2"></div>
        </div>
    </div>
<%- include('includes/footer')%>